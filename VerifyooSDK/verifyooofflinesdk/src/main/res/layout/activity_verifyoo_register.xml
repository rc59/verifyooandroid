<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/layoutStatus"
        android:visibility="gone"
        android:gravity="center" >

        <TextView
            android:id="@+id/textStatus"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@android:color/holo_red_dark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <android.gesture.GestureOverlayView
        android:id="@+id/gesturesOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gestureColor="@android:color/holo_blue_dark"
        android:gestureStrokeType="multiple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:gravity="center" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnSave"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:visibility="invisible"
                android:drawableLeft="@drawable/accept"
                android:shadowColor="@android:color/holo_green_dark"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/btnSave" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnClear"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/btnSave"
                android:visibility="invisible"
                android:drawableLeft="@drawable/restart"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/btnClear" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>